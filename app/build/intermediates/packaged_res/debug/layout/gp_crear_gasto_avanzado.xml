<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarA"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbarmenu_format"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <ImageView
        android:id="@+id/btnAtrasA2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_row" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="Crear Gasto"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarA"
        app:layout_constraintVertical_bias="0.312" />

    <ImageView
        android:id="@+id/btnCheckA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarA"
        app:layout_constraintVertical_bias="0.534"
        app:srcCompat="@drawable/confirmar"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icCategoriaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/txtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/toolbarA"
        app:srcCompat="@drawable/categoria" />

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/oswald"
        android:inputType="textPersonName"
        android:text="Titulo del gasto"
        android:textColor="@color/silver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/ivCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icCategoriaA"
        app:layout_constraintTop_toBottomOf="@+id/toolbarA"
        app:srcCompat="@drawable/tienda_comestibles"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etGastosA"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/oswald"
        android:inputType="textPersonName"
        android:text="¿Cuánto te has gastado?"
        android:textColor="@color/silver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFotoA2" />

    <EditText
        android:id="@+id/etDivisaA"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/oswald"
        android:inputType="textPersonName"
        android:text="EUR"
        android:textColor="@color/silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toEndOf="@+id/etGastosA"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFechaA"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/oswald"
        android:inputType="textPersonName"
        android:text="1 Dic. 2022"
        android:textColor="@color/silver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaA"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivCalendarioA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/etFechaA"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaA"
        app:srcCompat="@drawable/calendar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvFechaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Fecha"
        android:textColor="@color/silver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGastosA"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TextViewB3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Pagado por"
        android:textColor="@color/silver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFechaA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etPagadorA"
        android:layout_width="81dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="21dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/oswald"
        android:inputType="textPersonName"
        android:text="Yo"
        android:textColor="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewA4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewB3"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewA4"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btnAtras6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        app:srcCompat="@drawable/foto" />

    <ImageView
        android:id="@+id/btnFotoA2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        app:srcCompat="@drawable/foto" />

    <ImageView
        android:id="@+id/btnAnadirFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/txtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/icCategoriaA"
        app:srcCompat="@drawable/camara" />

</androidx.constraintlayout.widget.ConstraintLayout>